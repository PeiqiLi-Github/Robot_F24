<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/robot_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/robot_yellow_large" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/robot_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/robot_red_large" />

            <ImageView
                android:id="@+id/robot_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/robot_white_large" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/begin_game_mssg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/begin_game_mssg"
        android:textSize="24sp">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/clockwise"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            app:srcCompat="@drawable/rot_clockwise"
            android:layout_marginEnd="25dp"/>

        <ImageButton
            android:id="@+id/counter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            app:srcCompat="@drawable/rot_counter"
            android:layout_marginStart="25dp"/>
    </LinearLayout>

</LinearLayout>



